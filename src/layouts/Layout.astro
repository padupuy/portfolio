---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "Senior Engineering Portfolio | Pierre-Alexandre Dupuy" } = Astro.props;
---

<!DOCTYPE html>
<html class="light" lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;700;800&family=Inter:wght@900&display=swap" rel="stylesheet" />

</head>
<body class="bg-background-light dark:bg-background-dark text-black dark:text-white font-mono transition-colors duration-300 min-h-screen grid-bg overflow-x-hidden">
  <div class="scanline"></div>
  <slot />

  <!-- Decorative grid lines -->
  <div class="fixed inset-0 pointer-events-none opacity-10 z-[-1]">
    <div class="absolute top-0 left-1/4 h-full w-[1px] bg-black dark:bg-white"></div>
    <div class="absolute top-0 right-1/4 h-full w-[1px] bg-black dark:bg-white"></div>
    <div class="absolute top-1/4 left-0 w-full h-[1px] bg-black dark:bg-white flex justify-between px-4">
      <span class="text-[8px] -mt-2">MARK_ALPHA_77</span>
      <span class="text-[8px] -mt-2">COORD_X_992</span>
    </div>
    <div class="absolute bottom-1/4 left-0 w-full h-[1px] bg-black dark:bg-white flex justify-between px-4">
      <span class="text-[8px] -mt-2">REF_BETA_21</span>
      <span class="text-[8px] -mt-2">SYSTEM_FOOTPRINT_0.2px</span>
    </div>
  </div>

  <div class="fixed left-4 top-1/2 -rotate-90 origin-left text-[8px] opacity-20 tracking-widest hidden lg:block uppercase">
    Technical Specification // Authored by P.A. Dupuy
  </div>
  <div class="fixed right-4 top-1/2 rotate-90 origin-right text-[8px] opacity-20 tracking-widest hidden lg:block uppercase">
    Engineering Portfolio // System_ID: PAD-001
  </div>
</body>
</html>
