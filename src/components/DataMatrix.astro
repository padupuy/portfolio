<section class="mt-20">
  <div class="flex items-center justify-between mb-8 border-t border-black dark:border-white pt-4">
    <div class="flex items-center space-x-3">
      <span class="material-symbols-outlined text-sm text-primary">storage</span>
      <span class="technical-label font-bold">Data_Inventory_Matrix</span>
    </div>
    <span class="text-[10px] opacity-50 italic">REF: PAD_CORE_VOL_01</span>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- System Commands -->
    <div class="border border-black dark:border-white p-6 group hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-all cursor-pointer relative overflow-hidden">
      <div class="absolute top-0 right-0 p-2 opacity-10">
        <span class="material-symbols-outlined text-6xl">terminal</span>
      </div>
      <div class="mb-12">
        <span class="text-[9px] border border-current px-1 mb-2 inline-block">CMD_0x1</span>
        <h3 class="text-xl font-bold uppercase leading-none mt-2">System_<br />Commands</h3>
      </div>
      <div class="space-y-2 opacity-60">
        <div class="console-text">$ tail -f /dev/logs</div>
        <div class="console-text">$ npm run build:prod</div>
        <div class="console-text">$ docker-compose up</div>
      </div>
      <div class="mt-8 flex justify-between items-center">
        <span class="technical-label text-[8px]">Terminal Snippets</span>
        <span class="material-symbols-outlined text-sm">arrow_outward</span>
      </div>
    </div>

    <!-- Learning Logs -->
    <div class="border border-black dark:border-white p-6 group hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-all cursor-pointer relative overflow-hidden">
      <div class="absolute top-0 right-0 p-2 opacity-10">
        <span class="material-symbols-outlined text-6xl">menu_book</span>
      </div>
      <div class="mb-12">
        <span class="text-[9px] border border-current px-1 mb-2 inline-block">LOG_0x2</span>
        <h3 class="text-xl font-bold uppercase leading-none mt-2">Learning_<br />Logs</h3>
      </div>
      <div class="space-y-3">
        <div class="h-[1px] w-full bg-primary/20"></div>
        <p class="text-[10px] uppercase opacity-70">Daily TILs & Deep Dives on Rust/WASM</p>
      </div>
      <div class="mt-8 flex justify-between items-center">
        <span class="technical-label text-[8px]">Knowledge Base</span>
        <span class="material-symbols-outlined text-sm">arrow_outward</span>
      </div>
    </div>

    <!-- Arch Blueprints -->
    <div class="border border-black dark:border-white p-6 group hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-all cursor-pointer relative overflow-hidden">
      <div class="absolute top-0 right-0 p-2 opacity-10">
        <span class="material-symbols-outlined text-6xl">architecture</span>
      </div>
      <div class="mb-12">
        <span class="text-[9px] border border-current px-1 mb-2 inline-block">BP_0x3</span>
        <h3 class="text-xl font-bold uppercase leading-none mt-2">Arch_<br />Blueprints</h3>
      </div>
      <div class="grid grid-cols-4 gap-1 mb-4 opacity-30">
        <div class="h-4 border border-current"></div>
        <div class="h-4 border border-current"></div>
        <div class="h-4 bg-primary border border-primary"></div>
        <div class="h-4 border border-current"></div>
      </div>
      <div class="mt-8 flex justify-between items-center">
        <span class="technical-label text-[8px]">React Architecture Advice</span>
        <span class="material-symbols-outlined text-sm">arrow_outward</span>
      </div>
    </div>

    <!-- Mission Reports -->
    <div class="border-none bg-primary text-white p-6 group cursor-pointer relative overflow-hidden">
      <div class="absolute top-0 right-0 p-2 opacity-20">
        <span class="material-symbols-outlined text-6xl">assignment</span>
      </div>
      <div class="mb-12">
        <span class="text-[9px] border border-white px-1 mb-2 inline-block">RPT_0x4</span>
        <h3 class="text-xl font-bold uppercase leading-none mt-2">Mission_<br />Reports</h3>
      </div>
      <div class="space-y-1">
        <div class="text-[10px] font-bold">PROJECT_OMEGA: [COMPLETED]</div>
        <div class="text-[10px] font-bold">DASHBOARD_X: [STABLE]</div>
      </div>
      <div class="mt-8 flex justify-between items-center">
        <span class="technical-label text-[8px] text-white/80">Case Studies</span>
        <span class="material-symbols-outlined text-sm">arrow_outward</span>
      </div>
    </div>
  </div>
</section>
