<section class="relative mb-24">
  <div class="flex items-center space-x-4 mb-8">
    <div class="inline-block border-b border-primary/40 pb-1">
      <span class="technical-label opacity-60">SR. FRONTEND ENGINEER // ENGINEERING MANAGER // AI ENGINEER</span>
    </div>
  </div>
  <h1 class="text-7xl md:text-9xl font-display font-black leading-[0.85] tracking-tighter uppercase mb-20">
    Pierre<br />
    Alexandre<br />
    <span class="text-primary">Dupuy<span class="blink">_</span></span>
  </h1>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mt-16 border-t border-black/10 dark:border-white/10 pt-10">
    <!-- Frontend Software Engineer -->
    <div class="relative flex flex-col">
      <div class="flex items-baseline justify-between mb-4">
        <h2 class="text-xl font-bold uppercase tracking-tight">Frontend Software Engineer</h2>
        <span class="text-primary font-bold text-sm">15YR</span>
      </div>
      <div class="space-y-4">
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Stack JS</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">React / React Native</p>
        </div>
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Architecture</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">Robustness, Scalability, Performance, Maintenance, Testing Trophy</p>
        </div>
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Standards</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">UX, Accessibility, Eco-design</p>
        </div>
      </div>
      <div class="mt-6 border-t border-black/5 dark:border-white/5 pt-2">
        <span class="text-[8px] opacity-40 uppercase tracking-widest">Core Technical Domain // Ref: F-01</span>
      </div>
    </div>

    <!-- Leadership & Management -->
    <div class="relative flex flex-col">
      <div class="flex items-baseline justify-between mb-4">
        <h2 class="text-xl font-bold uppercase tracking-tight">Leadership & Management</h2>
        <span class="text-primary font-bold text-sm">05YR</span>
      </div>
      <div class="space-y-4">
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Operations</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">HR Interviews, Career Evolution Tracking, Team Animation</p>
        </div>
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Culture</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">Strong Technical Watch Culture, Product Culture, Continuous Training</p>
        </div>
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Expertise</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">Frontend Expertise Integration</p>
        </div>
      </div>
      <div class="mt-6 border-t border-black/5 dark:border-white/5 pt-2">
        <span class="text-[8px] opacity-40 uppercase tracking-widest">Leadership & Operations // Ref: L-02</span>
      </div>
    </div>

    <!-- AI Engineer -->
    <div class="relative flex flex-col">
      <div class="flex items-baseline justify-between mb-4">
        <h2 class="text-xl font-bold uppercase tracking-tight">AI Engineer</h2>
        <span class="text-primary font-bold text-sm">02YR</span>
      </div>
      <div class="space-y-4">
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Focus</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">Emerging Tech, Large Language Models (LLMs), Prompt Engineering</p>
        </div>
        <div>
          <span class="technical-label text-primary font-bold block mb-1">Integration</span>
          <p class="text-[11px] leading-relaxed uppercase opacity-80">AI-Augmented Workflows, Agentic Systems, Technical Strategy</p>
        </div>
      </div>
      <div class="mt-6 border-t border-black/5 dark:border-white/5 pt-2">
        <span class="text-[8px] opacity-40 uppercase tracking-widest">Emerging Tech & LLMs // Ref: A-03</span>
      </div>
    </div>
  </div>
</section>
