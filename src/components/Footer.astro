<script>
  const birthDate = new Date('1990-11-22T00:00:00');
  function updateUptime() {
    const now = new Date();
    let diff = Math.floor((now - birthDate) / 1000);
    const years = Math.floor(diff / (365.25 * 24 * 60 * 60));
    diff -= years * (365.25 * 24 * 60 * 60);
    const months = Math.floor(diff / (30.44 * 24 * 60 * 60));
    diff -= months * (30.44 * 24 * 60 * 60);
    const days = Math.floor(diff / (24 * 60 * 60));
    diff -= days * (24 * 60 * 60);
    const hours = Math.floor(diff / (60 * 60));
    diff -= hours * (60 * 60);
    const minutes = Math.floor(diff / 60);
    const seconds = Math.floor(diff % 60);
    const format = (num) => String(Math.floor(num)).padStart(2, '0');
    document.getElementById('uptime-display').innerText =
      `${format(years)}:${format(months)}:${format(days)}:${format(hours)}:${format(minutes)}:${format(seconds)}`;
  }
  setInterval(updateUptime, 1000);
  updateUptime();
</script>
